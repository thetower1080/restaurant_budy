<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group.project.restaurantbuddy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_food"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_food"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name = ".MyApplication"
        >
<!--        <activity android:name=".MyApplication"></activity>-->
        <activity
            android:name=".MainPage_botton_nav"
            android:label="@string/title_activity_main_page_botton_nav" />
        <activity android:name=".cartPage" />
        <activity android:name=".MainPage" />
        <activity android:name=".Payment" />
        <activity android:name=".Request" />
        <activity android:name=".FindTable"></activity>
        <activity
            android:name=".SignUp"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.group.project.restaurantbuddy.MainActivity" />
        </activity>
        <activity android:name=".SignIn" />
        <activity android:name=".ui.details.ItemDetailsActivity" />
<!--        <activity android:name=".loginPageActivity" />-->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>